---
import Section from "./Section.astro";
import { work } from "@cv";
---

<Section title="Experience">
    <ul>
        {
            work.map(({ name, position, summary, startDate, endDate }) => {
                const fullStarDate = new Date(startDate).getFullYear();
                const fullEndDate =
                    endDate !== null
                        ? new Date(endDate).getFullYear()
                        : "working...";
                const years = `${fullStarDate}-${fullEndDate}`;
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3{
        font-weight: 500;
        color: #111;
    }
    article h4{
        font-weight: 400;
        color: #222;
    }
    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    time{
        color: #555;
        font-size: 0.85rem;
    }
</style>
