---
import Section from "./Section.astro";
import { projects } from "@cv";
---

<Section title="Education">
    <ul>
        {
            projects.map(({ name, isActive, description, highlights, url }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a
                                        href={url}
                                        title={`ver el proyecto ${name}`}
                                    >
                                        {name}
                                    </a>
                                    {isActive&& <span>&bull;</span>}

                                </h3>

                                <p>{description}</p>
                            </header>
                            <footer>
                                {highlights.map((value) => (
                                    <span>{value}</span>
                                ))}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-inline: -16px;
    }
    article {
        border-radius: 6px;
        border: 1px solid #eee;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 16px;
        height: 100%;
    }
    article header {
        flex: 1;
    }
    article h3 {
        margin-bottom: 4px;
    }
    article h3 span{
        color: rgb(0, 211, 0);
    }
    article a {
        color: #111;
    }
    article a:hover {
        text-decoration: underline;
    }
    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }
    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }
    footer span {
        background: #eee;
        border-radius: 6px;
        color: black;
        font-size: 0.6rem;
        padding: 0.2rem 0.6rem;
        align-items: flex-end;
        display: inline-flex;
    }
</style>
