---
import Section from "./Section.astro"
import {skills} from "@cv"
---
<Section title = "Skills">
    <ul>
        {skills.map(({name}) =>{
            return (
                <li>
                    <span>{name}</span>
                </li>
            )
        })}
    </ul>
    
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    li{
        background: #eee;
        color: black;
        border-radius: 5px;
        font-weight: 500;
        font-size: 0.8rem;
        padding: 0.2rem 0.6rem;
    }
</style>